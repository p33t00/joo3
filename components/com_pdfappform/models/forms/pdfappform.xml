<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset name="pdfappform" addrulepath="components/com_pdfappform/models/rules">

		<field name="first_name"
			type="text"
			id="form-name"
			size="33"
			label="COM_PDFAPPFORM_MESSAGE_NAME"
			filter="string"
			required="true"
		/>

		<field name="last_name"
			type="text"
			id="form-last"
			size="33"
			label="COM_PDFAPPFORM_MESSAGE_LAST_NAME"
			filter="string"
			required="true"
		/>

		<field name="email"
			type="email"
			id="form-email"
			size="39"
			label="COM_PDFAPPFORM_MESSAGE_EMAIL"
			filter="email"
		/>

		<field name="phone"
			type="tel"
			id="form-phone"
			size="27"
			label="COM_PDFAPPFORM_MESSAGE_PHONE"
			validate="phone"
			required="true"
		/>


		<field
			name="captcha"
			type="captcha"
			label="COM_PDFAPPFORM_CAPTCHA_LABEL"
			description="COM_PDFAPPFORM_CAPTCHA_DESC"
			validate="captcha"
			namespace="contact"
		/>
	</fieldset>
</form>